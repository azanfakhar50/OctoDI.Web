@model OctoDI.Web.Models.DatabaseModels.Buyer
@{
    ViewData["Title"] = "Edit Buyer";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-pencil-square"></i> Edit Buyer
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Validation Summary -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <!-- Form Card -->
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="BuyerId" />

                <!-- Row 1: Business Name & NTN -->
                <div class="row mb-3">
                    <div class="col-md-8">
                        <label asp-for="BuyerBusinessName" class="form-label fw-bold">
                            Business Name <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            <input asp-for="BuyerBusinessName" class="form-control"
                                   placeholder="Enter business name" required />
                        </div>
                        <span asp-validation-for="BuyerBusinessName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="BuyerNTN" class="form-label fw-bold">
                            NTN <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-hash"></i></span>
                            <input asp-for="BuyerNTN" class="form-control"
                                   placeholder="e.g., 1234567-8" required />
                        </div>
                        <span asp-validation-for="BuyerNTN" class="text-danger small"></span>
                        <small class="text-muted">National Tax Number</small>
                    </div>
                </div>

                <!-- Row 2: Province & Registration Type -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="BuyerProvince" class="form-label fw-bold">
                            Province <span class="text-danger">*</span>
                        </label>
                        <select asp-for="BuyerProvince" class="form-select" required>
                            <option value="">-- Select Province --</option>
                            <option value="Punjab">Punjab</option>
                            <option value="Sindh">Sindh</option>
                            <option value="Khyber Pakhtunkhwa">Khyber Pakhtunkhwa</option>
                            <option value="Balochistan">Balochistan</option>
                            <option value="Islamabad Capital Territory">Islamabad Capital Territory</option>
                            <option value="Gilgit-Baltistan">Gilgit-Baltistan</option>
                            <option value="Azad Jammu and Kashmir">Azad Jammu and Kashmir</option>
                        </select>
                        <span asp-validation-for="BuyerProvince" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BuyerRegistrationType" class="form-label fw-bold">
                            Registration Type
                        </label>
                        <select asp-for="BuyerRegistrationType" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="Integrated">Integrated</option>
                            <option value="Non-Integrated">Non-Integrated</option>
                            <option value="Unregistered">Unregistered</option>
                            <option value="Filer">Filer</option>
                            <option value="Non-Filer">Non-Filer</option>
                        </select>
                        <span asp-validation-for="BuyerRegistrationType" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Row 3: Address -->
                <div class="mb-4">
                    <label asp-for="BuyerAddress" class="form-label fw-bold">
                        Address <span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                        <textarea asp-for="BuyerAddress" class="form-control" rows="3"
                                  placeholder="Enter complete address" required></textarea>
                    </div>
                    <span asp-validation-for="BuyerAddress" class="text-danger small"></span>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Update Buyer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Info Box -->
    <div class="alert alert-info mt-3" role="alert">
        <i class="bi bi-info-circle-fill"></i>
        <strong>Note:</strong> NTN must be unique. Changes will reflect in all related invoices.
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Set selected values for dropdowns
        document.addEventListener('DOMContentLoaded', function() {
            // Set selected province
            const provinceSelect = document.querySelector('select[name="BuyerProvince"]');
            if (provinceSelect && '@Model.BuyerProvince') {
                provinceSelect.value = '@Model.BuyerProvince';
            }

            // Set selected registration type
            const regTypeSelect = document.querySelector('select[name="BuyerRegistrationType"]');
            if (regTypeSelect && '@Model.BuyerRegistrationType') {
                regTypeSelect.value = '@Model.BuyerRegistrationType';
            }
        });
    </script>
}