@model OctoDI.Web.Models.DatabaseModels.Product
@{
    ViewData["Title"] = "Edit Global Sale Rate";
}

<div class="card shadow-lg rounded-4 p-4">
    <h4 class="mb-4"><i class="bi bi-pencil-square"></i> Edit Global Sale Rate</h4>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Product Description</label>
                <input asp-for="ProductDescription" class="form-control" required />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">HS Code (Optional)</label>
                <input asp-for="HSCode" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Unit</label>
                <select asp-for="UnitId" class="form-select" required>
                    <option value="">-- Select Unit --</option>
                    @foreach (var unit in ViewBag.Units)
                    {
                        <option value="@unit.UnitId">@unit.Name</option>
                    }
                </select>
                <span asp-validation-for="UnitId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Service Category</label>
                <select asp-for="ServiceCategoryId" class="form-select" required>
                    <option value="">-- Select Category --</option>
                    @foreach (var cat in ViewBag.ServiceCategories)
                    {
                        <option value="@cat.ServiceCategoryId">@cat.Name</option>
                    }
                </select>
                <span asp-validation-for="ServiceCategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Rate</label>
                <input asp-for="Rate" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Tax Rate (%)</label>
                <input asp-for="TaxRate" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="TaxRate" class="text-danger"></span>
            </div>
        </div>

        <div class="d-grid gap-2 mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Update Global Rate
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}