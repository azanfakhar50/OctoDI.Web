@model OctoDI.Web.Models.DatabaseModels.Subscription

@{
    ViewData["Title"] = "Edit Subscription";
}

<style>
    /* Container & Card */
    .modern-container {
        max-width: 1000px;
        margin: 2rem auto;
    }

    .modern-card {
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        background-color: #fff;
        padding: 2rem;
        transition: all 0.3s ease;
    }

        .modern-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        }

    /* Page Header */
    .page-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        font-size: 1.5rem;
        color: #333;
        margin-bottom: 1.5rem;
    }

        .page-header i {
            color: #667eea;
        }

    /* Form Inputs */
    .form-label {
        font-weight: 600;
    }

    input.form-control, textarea.form-control, select.form-select {
        border-radius: 0.6rem;
        padding: 0.5rem 0.75rem;
    }

    /* Buttons */
    .btn-primary {
        border-radius: 0.75rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
        }

    .btn-secondary {
        border-radius: 0.75rem;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-secondary:hover {
            transform: translateY(-1px);
        }
</style>

<div class="modern-container">
    <div class="page-header">
        <i class="bi bi-pencil-square"></i>
        <span>Edit Subscription</span>
    </div>

    <form asp-action="Edit" method="post" class="modern-card">
        <input type="hidden" asp-for="SubscriptionId" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="CompanyName" class="form-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="BusinessName" class="form-label"></label>
                <input asp-for="BusinessName" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NtnCnic" class="form-label">NTN / CNIC</label>
                <input asp-for="NtnCnic" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Province" class="form-label"></label>
                <input asp-for="Province" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SubscriptionType" class="form-label">Subscription Type</label>
            <select asp-for="SubscriptionType" class="form-select">
                <option value="">-- Select Type --</option>
                <option value="Goods" selected="@(Model.SubscriptionType == "Goods" ? "selected" : null)">Goods</option>
                <option value="Services" selected="@(Model.SubscriptionType == "Services" ? "selected" : null)">Services</option>
            </select>
            <span asp-validation-for="SubscriptionType" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="ContactPerson" class="form-label"></label>
                <input asp-for="ContactPerson" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="ContactEmail" class="form-label"></label>
                <input asp-for="ContactEmail" class="form-control" type="email" />
            </div>
            <div class="col-md-4">
                <label asp-for="ContactPhone" class="form-label"></label>
                <input asp-for="ContactPhone" class="form-control" />
            </div>
        </div>

        <!-- Status and Security Settings Row -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="IsActive" class="form-label">Is Active</label>
                <select asp-for="IsActive" class="form-select">
                    <option value="true" selected="@(Model.IsActive ? "selected" : null)">Active</option>
                    <option value="false" selected="@(Model.IsActive ? null : "selected")">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IsTwoFactorEnabled" class="form-label">
                    <i class="bi bi-shield-lock"></i> Two-Factor Authentication
                </label>
                <select asp-for="IsTwoFactorEnabled" class="form-select">
                    <option value="true" selected="@(Model.IsTwoFactorEnabled ? "selected" : null)">Enabled</option>
                    <option value="false" selected="@(Model.IsTwoFactorEnabled ? null : "selected")">Disabled</option>
                </select>
                <span asp-validation-for="IsTwoFactorEnabled" class="text-danger"></span>
                <small class="text-muted d-block mt-1">
                    <i class="bi bi-info-circle"></i> Enable 2FA for enhanced security
                </small>
            </div>
        </div>

        <!-- IsBlocked Checkbox -->
        <div class="mb-3 form-check">
            <input asp-for="IsBlocked" class="form-check-input" />
            <label asp-for="IsBlocked" class="form-check-label"></label>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="SubscriptionStartDate" class="form-label required-field"></label>
                <input asp-for="SubscriptionStartDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="SubscriptionStartDate" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="SubscriptionEndDate" class="form-label required-field"></label>
                <input asp-for="SubscriptionEndDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="SubscriptionEndDate" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="MaxUsers" class="form-label"></label>
            <input asp-for="MaxUsers" class="form-control" type="number" min="1" />
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Update
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}