@model OctoDI.Web.Models.ViewModels.SuperAdminDashboardViewModel
@{
    ViewData["Title"] = "SuperAdmin Dashboard";
    var pageNumber = ViewBag.PageNumber ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
}

<style>
    /* Common Gradient Hover Style */
    .gradient-hover-btn {
        border-width: 2px;
        transition: 0.3s ease;
        color: #667eea !important;
        border-color: #667eea !important;
    }

    .gradient-hover-btn:hover {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        color: #fff !important;
        border-color: transparent !important;
    }

    /* Pagination Styles */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 1.5rem;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0.25rem;
        margin: 0;
        gap: 0.25rem;
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        flex-wrap: wrap;
        justify-content: center;
        background: white;
    }

    .page-item a {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 35px;
        height: 35px;
        padding: 0 0.5rem;
        border-radius: 0.5rem;
        color: #1f2937;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.85rem;
        transition: all 0.3s ease;
    }

        .page-item a:hover {
            background: #f3f4f6;
        }

    .page-item.active a {
        background: #6366f1;
        color: white;
    }

    .page-item.disabled a {
        color: #6b7280;
        cursor: not-allowed;
        opacity: 0.5;
    }

        .page-item.disabled a:hover {
            background: transparent;
        }
</style>

<div class="container py-5">

    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h2 class="fw-bold text-dark">
                <i class="bi bi-speedometer2"></i> SuperAdmin Dashboard
            </h2>
            <p class="text-muted mb-0">Welcome, @User.Identity.Name</p>
        </div>
        <div class="col-auto">
            <a asp-controller="Product" asp-action="Dashboard" class="btn btn-success">
                <i class="bi bi-globe"></i> Manage Global Sale Rates
            </a>
        </div>
    </div>
    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-building text-primary mb-2" style="font-size:2rem;"></i>
                    <h3 class="fw-bold">@Model.TotalSubscriptions</h3>
                    <p>Total Subscriptions</p>
                    <small class="text-success">@Model.ActiveSubscriptions Active, @Model.BlockedSubscriptions Blocked</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-people-fill text-success mb-2" style="font-size:2rem;"></i>
                    <h3 class="fw-bold">@Model.TotalUsers</h3>
                    <p>Total Users</p>
                    <small class="text-success">@Model.ActiveUsers Active</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-receipt text-info mb-2" style="font-size:2rem;"></i>
                    <h3 class="fw-bold">@Model.TotalInvoices</h3>
                    <p>Total Invoices</p>
                    <small class="text-warning">@Model.PendingInvoices Pending</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-shield-check text-secondary mb-2" style="font-size:2rem;"></i>
                    <h6>FBR Integration</h6>
                    <span class="badge bg-info">Check Subscriptions</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Subscriptions -->
    <div class="row mb-4">
        <div class="col">
            <h5 class="fw-bold mb-3">Recent Subscriptions</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Company</th>
                            <th>Status</th>
                            <th>Users</th>
                            <th>Invoices</th>
                            <th>FBR</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentSubscriptions != null && Model.RecentSubscriptions.Any())
                        {
                            @foreach (var sub in Model.RecentSubscriptions)
                            {
                                <tr>
                                    <td>@sub.CompanyName</td>
                                    <td>
                                        <span class="badge @(sub.IsBlocked ? "bg-danger" : (sub.IsActive ? "bg-success" : "bg-secondary"))">
                                            @(sub.IsBlocked ? "Blocked" : (sub.IsActive ? "Active" : "Inactive"))
                                        </span>
                                    </td>
                                    <td>@sub.ActiveUsers / @sub.TotalUsers</td>
                                    <td>
                                        <a asp-controller="SuperAdmin"
                                           asp-action="SubscriptionInvoices"
                                           asp-route-subscriptionId="@sub.SubscriptionId"
                                           class="text-decoration-none">
                                            @sub.TotalInvoices
                                        </a>


                                    </td>
                                    <td>
                                        <span class="badge @(sub.FbrConfigured ? "bg-success" : "bg-warning")">
                                            @(sub.FbrConfigured ? "Configured" : "Not Set")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@sub.SubscriptionId" class="btn btn-sm btn-outline-primary" title="Edit Subscription">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@sub.SubscriptionId" class="btn btn-sm btn-outline-danger" title="Delete Subscription">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            <a asp-controller="SuperAdmin" asp-action="CreateUser" asp-route-subscriptionId="@sub.SubscriptionId" class="btn btn-sm btn-outline-success" title="Add User">
                                                <i class="bi bi-person-plus"></i>
                                            </a>
                                            

                                            <!-- Block/Unblock Button -->
                                            <button type="button" class="btn btn-sm @(sub.IsBlocked ? "btn-success" : "btn-warning")"
                                                    title="@(sub.IsBlocked ? "Unblock" : "Block")"
                                                    onclick="showBlockModal(@sub.SubscriptionId)">
                                                <i class="bi @(sub.IsBlocked ? "bi-unlock-fill" : "bi-lock-fill")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                    <p class="mt-2">No subscriptions found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="pagination-container">
                    <nav>
                        <ul class="pagination">
                            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" href="?page=@(pageNumber - 1)&pageSize=@pageSize">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            @{
                                int maxPagesToShow = 5;
                                int startPage = Math.Max(1, pageNumber - (maxPagesToShow / 2));
                                int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);
                                if ((endPage - startPage) < (maxPagesToShow - 1))
                                {
                                    startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                                }
                            }
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" href="?page=@i&pageSize=@pageSize">@i</a>
                                </li>
                            }
                            <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                                <a class="page-link" href="?page=@(pageNumber + 1)&pageSize=@pageSize">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions -->

    <div class="row g-3 mt-4">
        <div class="col-md-3">
            <a asp-action="CreateSubscription"
               class="btn gradient-hover-btn w-100 py-3">
                <i class="bi bi-plus-circle"></i><br /> Add Subscription
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="SuperAdmin" asp-action="Index"
               class="btn gradient-hover-btn w-100 py-3">
                <i class="bi bi-receipt"></i><br /> Manage Subscriptions
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="SuperAdmin" asp-action="PostedInvoices"
               class="btn gradient-hover-btn w-100 py-3">
                <i class="bi bi-receipt"></i><br /> View Subscription Invoices
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="SuperAdmin" asp-action="SettingIndex"
               class="btn gradient-hover-btn w-100 py-3">
                <i class="bi bi-gear-fill"></i><br /> Subscription Settings
            </a>
        </div>
    </div>

</div>

<!-- Block/Unblock Modal -->
<div class="modal fade" id="blockModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-action="ToggleStatus">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Block/Unblock Subscription</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="subscriptionId" name="id" value="" />
                    <div class="mb-3">
                        <label for="blockReason" class="form-label">Reason (optional)</label>
                        <input type="text" class="form-control" name="blockReason" id="blockReason" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function showBlockModal(subscriptionId) {
        document.getElementById('subscriptionId').value = subscriptionId;
        var modal = new bootstrap.Modal(document.getElementById('blockModal'));
        modal.show();
    }
</script>