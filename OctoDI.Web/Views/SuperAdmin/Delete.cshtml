@model OctoDI.Web.Models.DatabaseModels.Subscription

@{
    ViewData["Title"] = "Delete Subscription";
}

<style>
    .modern-container {
        max-width: 700px;
        margin: 4rem auto;
    }

    .modern-card {
        border-radius: 1rem;
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        background-color: #fff;
        padding: 2.5rem;
        border-left: 6px solid #dc3545;
        transition: all 0.3s ease;
    }

        .modern-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.2);
        }

    .page-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        font-size: 1.5rem;
        color: #dc3545;
        margin-bottom: 1.5rem;
    }

        .page-header i {
            font-size: 1.8rem;
        }

    .warning-box {
        background: linear-gradient(135deg, #fff5f5, #ffe5e5);
        border: 2px solid #dc3545;
        border-radius: 0.75rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .warning-box p {
            margin: 0;
            color: #721c24;
            font-weight: 600;
        }

    dl.row dt {
        font-weight: 600;
        color: #495057;
    }

    dl.row dd {
        margin-bottom: 0.75rem;
        color: #6c757d;
    }

    .btn-danger {
        border-radius: 0.75rem;
        background: linear-gradient(135deg, #dc3545, #c82333);
        border: none;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        font-weight: 600;
        padding: 0.6rem 1.5rem;
        transition: all 0.3s;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
            background: linear-gradient(135deg, #c82333, #bd2130);
        }

    .btn-secondary {
        border-radius: 0.75rem;
        font-weight: 600;
        padding: 0.6rem 1.5rem;
        transition: all 0.3s;
    }

        .btn-secondary:hover {
            transform: translateY(-1px);
        }

    .info-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .badge-active {
        background: #d4edda;
        color: #155724;
    }

    .badge-blocked {
        background: #f8d7da;
        color: #721c24;
    }

    .alert {
        border-radius: 0.75rem;
        border: none;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .alert-danger {
        background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
        color: white;
    }
</style>

<div class="modern-container">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="modern-card">
        <div class="page-header">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>Confirm Deletion</span>
        </div>

        <div class="warning-box">
            <p>
                <i class="bi bi-exclamation-circle-fill me-2"></i>
                Are you sure you want to delete this subscription? This action cannot be undone.
            </p>
        </div>

        <h5 class="mb-3">Subscription Details:</h5>
        <dl class="row mb-4">
            <dt class="col-sm-4">
                <i class="bi bi-building me-1"></i> Company Name
            </dt>
            <dd class="col-sm-8">@Model.CompanyName</dd>

            @if (!string.IsNullOrEmpty(Model.BusinessName))
            {
                <dt class="col-sm-4">
                    <i class="bi bi-briefcase me-1"></i> Business Name
                </dt>
                <dd class="col-sm-8">@Model.BusinessName</dd>
            }

            <dt class="col-sm-4">
                <i class="bi bi-hash me-1"></i> NTN/CNIC
            </dt>
            <dd class="col-sm-8">@Model.NtnCnic</dd>

            @if (!string.IsNullOrEmpty(Model.Province))
            {
                <dt class="col-sm-4">
                    <i class="bi bi-geo-alt me-1"></i> Province
                </dt>
                <dd class="col-sm-8">@Model.Province</dd>
            }

            @if (!string.IsNullOrEmpty(Model.ContactEmail))
            {
                <dt class="col-sm-4">
                    <i class="bi bi-envelope me-1"></i> Email
                </dt>
                <dd class="col-sm-8">@Model.ContactEmail</dd>
            }

            <dt class="col-sm-4">
                <i class="bi bi-calendar-check me-1"></i> Start Date
            </dt>
            <dd class="col-sm-8">
                @(Model.SubscriptionStartDate?.ToString("dd MMM yyyy") ?? "N/A")
            </dd>

            <dt class="col-sm-4">
                <i class="bi bi-calendar-x me-1"></i> End Date
            </dt>
            <dd class="col-sm-8">
                @(Model.SubscriptionEndDate?.ToString("dd MMM yyyy") ?? "N/A")
            </dd>

            <dt class="col-sm-4">
                <i class="bi bi-people me-1"></i> Max Users
            </dt>
            <dd class="col-sm-8">@(Model.MaxUsers ?? 0)</dd>

            <dt class="col-sm-4">
                <i class="bi bi-info-circle me-1"></i> Status
            </dt>
            <dd class="col-sm-8">
                @if (Model.IsBlocked)
                {
                    <span class="info-badge badge-blocked">
                        <i class="bi bi-x-circle me-1"></i> Blocked
                    </span>
                }
                else if (Model.IsActive)
                {
                    <span class="info-badge badge-active">
                        <i class="bi bi-check-circle me-1"></i> Active
                    </span>
                }
                else
                {
                    <span class="info-badge" style="background: #fff3cd; color: #856404;">
                        <i class="bi bi-dash-circle me-1"></i> Inactive
                    </span>
                }
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="SubscriptionId" />

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Dashboard" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure? This will permanently delete the subscription!');">
                    <i class="bi bi-trash me-1"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}