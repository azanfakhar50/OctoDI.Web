@model OctoDI.Web.Models.DatabaseModels.Invoice

@{
    ViewData["Title"] = "Create Invoice";
}

<!-- ✅ Select2 CSS for Live Search Dropdown -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<style>
    .modern-badge {
        font-size: 0.75rem;
        padding: 0.35rem 0.65rem;
        border-radius: 6px;
        font-weight: 600;
    }

    .info-pill {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-left: 4px solid #2196f3;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        font-size: 0.85rem;
    }

    .success-pill {
        background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
        border-left: 4px solid #4caf50;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        font-size: 0.85rem;
    }

    .compact-form-control {
        padding: 0.5rem 0.75rem;
        font-size: 0.9rem;
    }

    .compact-label {
        font-size: 0.85rem;
        margin-bottom: 0.3rem;
    }

    .table-compact {
        font-size: 0.85rem;
    }

        .table-compact th {
            padding: 0.6rem 0.4rem;
            font-weight: 600;
        }

        .table-compact td {
            padding: 0.5rem 0.4rem;
            vertical-align: middle;
        }

        .table-compact input,
        .table-compact select {
            font-size: 0.8rem;
            padding: 0.4rem 0.5rem;
        }

    .select2-container--bootstrap-5 .select2-selection {
        min-height: 42px !important;
        padding: 0.5rem 0.75rem !important;
        font-size: 0.9rem !important;
    }
</style>

<div class="container-fluid py-3">
    <div class="row">
        <div class="col-12">
            <!-- Modern Compact Header -->
            <div class="card border-0 shadow-sm mb-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center text-white">
                        <div>
                            <h4 class="fw-bold mb-1">
                                <i class="bi bi-receipt-cutoff"></i> Create New Invoice
                            </h4>
                            <p class="mb-0 opacity-75" style="font-size: 0.85rem;">
                                Generate FBR-compliant digital invoice
                                <span class="badge bg-light text-dark ms-2">@ViewBag.SubscriptionType</span>
                            </p>
                        </div>
                        <a asp-controller="SubscriptionAdmin" asp-action="Index"
                           asp-route-subscriptionId="@ViewBag.SubscriptionId"
                           class="btn btn-light">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>

            <form asp-action="Create" method="post" id="invoiceForm">
                <input type="hidden" asp-for="SubscriptionId" value="@Model.SubscriptionId" />

                <div class="row g-3">
                    <!-- Left Column - Invoice Details -->
                    <div class="col-lg-8">
                        <!-- Invoice Information Card -->
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white border-bottom py-2">
                                <h6 class="mb-0 fw-bold text-dark">
                                    <i class="bi bi-info-circle-fill text-primary"></i> Invoice Information
                                </h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="row g-2">
                                    <!-- Invoice Type -->
                                    <div class="col-md-4">
                                        <label asp-for="InvoiceType" class="form-label compact-label fw-semibold">
                                            Invoice Type <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="InvoiceType" class="form-select compact-form-control" required>
                                            <option value="">-- Select Type --</option>
                                            <option value="Sale Invoice">Sales Invoice</option>
                                            <option value="Debit Note">Debit Note</option>
                                        </select>
                                    </div>

                                    <!-- Invoice Date -->
                                    <div class="col-md-4">
                                        <label asp-for="InvoiceDate" class="form-label compact-label fw-semibold">
                                            Invoice Date <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="InvoiceDate" type="date" class="form-control compact-form-control"
                                               value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                    </div>

                                    <!-- Status -->
                                    <div class="col-md-4">
                                        <label asp-for="Status" class="form-label compact-label fw-semibold">Status</label>
                                        <select asp-for="Status" class="form-select compact-form-control">
                                            <option value="Draft">Draft</option>
                                            <option value="Pending">Pending</option>
                                            <option value="Paid">Paid</option>
                                        </select>
                                    </div>

                                    <!-- Buyer Selection with Live Search -->
                                    <div class="col-12">
                                        <label asp-for="BuyerId" class="form-label compact-label fw-semibold">
                                            Select Buyer <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="BuyerId" class="form-select compact-form-control" id="buyerSelect" required>
                                            <option value="">-- Type to search buyer --</option>
                                            @foreach (var buyer in ViewBag.Buyers)
                                            {
                                                <option value="@buyer.BuyerId"
                                                        data-name="@buyer.BuyerBusinessName"
                                                        data-ntn="@buyer.BuyerNTN"
                                                        data-province="@buyer.BuyerProvince">
                                                    @buyer.BuyerBusinessName (@buyer.BuyerNTN) - @buyer.BuyerProvince
                                                </option>
                                            }
                                        </select>

                                        <small class="text-muted mt-1 d-block">
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#addBuyerModal" class="text-decoration-none">
                                                <i class="bi bi-plus-circle"></i> Add New Buyer
                                            </a>
                                        </small>
                                    </div>

                                    <!-- Remarks -->
                                    <div class="col-12 mt-2">
                                        <label asp-for="Remarks" class="form-label compact-label fw-semibold">Remarks</label>
                                        <textarea asp-for="Remarks" class="form-control compact-form-control" rows="2"
                                                  placeholder="Additional notes or comments..."></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Invoice Items Card -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-bottom py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 fw-bold text-dark">
                                        <i class="bi bi-cart-fill text-success"></i> Invoice Items
                                    </h6>
                                    <button type="button" class="btn btn-success btn-sm" onclick="addItem()">
                                        <i class="bi bi-plus-lg"></i> Add Item
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover table-compact mb-0" id="itemsTable">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width: 3%">#</th>
                                                <th style="width: 20%">Product</th>
                                                <th style="width: 11%">HS Code</th>
                                                <th style="width: 11%">Rate/Unit</th>
                                                <th style="width: 9%">UOM</th>
                                                <th style="width: 9%">Qty</th>
                                                <th style="width: 8%">Tax Rate</th>
                                                <th style="width: 11%">Value (Excl ST)</th>
                                                <th style="width: 11%">Sales Tax</th>
                                                <th style="width: 10%">Discount</th>
                                                <th style="width: 3%">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="itemsBody">
                                            <tr>
                                                <td colspan="11" class="text-center py-4 text-muted">
                                                    <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                                                    <p class="mb-0" style="font-size: 0.85rem;">No items added yet. Click "Add Item" to start.</p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column - Summary -->
                    <div class="col-lg-4">
                        <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                            <div class="card-header text-white py-2" style="background: linear-gradient(135deg,  #667eea 0%, #764ba2 100%);">
                                <h6 class="mb-0 fw-bold">
                                    <i class="bi bi-calculator-fill"></i> Invoice Summary
                                </h6>
                            </div>
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                                    <span class="text-muted" style="font-size: 0.85rem;">Subtotal (Excl. Tax):</span>
                                    <strong style="font-size: 1rem;" id="subtotal">Rs. 0.00</strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                                    <span class="text-muted" style="font-size: 0.85rem;">Sales Tax:</span>
                                    <strong class="text-info" style="font-size: 1rem;" id="totalTax">Rs. 0.00</strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                                    <span class="text-muted" style="font-size: 0.85rem;">Total Discount:</span>
                                    <strong class="text-danger" style="font-size: 1rem;" id="totalDiscount">- Rs. 0.00</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center p-2 rounded mt-3"
                                     style="background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);">
                                    <h6 class="mb-0 fw-bold">Grand Total:</h6>
                                    <h4 class="mb-0 fw-bold text-success" id="grandTotal">Rs. 0.00</h4>
                                </div>

                                <div class="alert alert-warning mt-3 py-2" style="font-size: 0.8rem;">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <strong>Note:</strong> FBR invoice number will be generated after submission.
                                </div>
                            </div>
                            <div class="card-footer bg-white border-top-0 p-3">
                                <button type="submit" class="btn btn-success w-100 fw-bold shadow-sm">
                                    <i class="bi bi-check-circle-fill"></i> Create Invoice
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Buyer Modal -->
<div class="modal fade" id="addBuyerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header text-white py-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h6 class="modal-title fw-bold">
                    <i class="bi bi-building-add"></i> Add New Buyer
                </h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-3">
                <form id="addBuyerForm">
                    <div class="row g-2">
                        <div class="col-md-8">
                            <label class="form-label compact-label fw-semibold">Business Name <span class="text-danger">*</span></label>
                            <input type="text" id="newBuyerName" class="form-control compact-form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label compact-label fw-semibold">NTN <span class="text-danger">*</span></label>
                            <input type="text" id="newBuyerNTN" class="form-control compact-form-control"
                                   placeholder="1234567-8" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label compact-label fw-semibold">Province <span class="text-danger">*</span></label>
                            <select id="newBuyerProvince" class="form-select compact-form-control" required>
                                <option value="">-- Select Province --</option>
                                <option value="Punjab">Punjab</option>
                                <option value="Sindh">Sindh</option>
                                <option value="Khyber Pakhtunkhwa">Khyber Pakhtunkhwa</option>
                                <option value="Balochistan">Balochistan</option>
                                <option value="Islamabad Capital Territory">Islamabad Capital Territory</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label compact-label fw-semibold">Registration Type</label>
                            <select id="newBuyerRegType" class="form-select compact-form-control">
                                <option value="Registered">Registered</option>
                                <option value="Unregistered">Unregistered</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label compact-label fw-semibold">Address <span class="text-danger">*</span></label>
                            <textarea id="newBuyerAddress" class="form-control compact-form-control" rows="2" required></textarea>
                        </div>
                    </div>
                    <div id="buyerModalError" class="alert alert-danger d-none mt-2 py-2" style="font-size: 0.85rem;"></div>
                    <div id="buyerModalSuccess" class="alert alert-success d-none mt-2 py-2" style="font-size: 0.85rem;"></div>
                </form>
            </div>
            <div class="modal-footer bg-light py-2">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <button type="button" class="btn btn-primary btn-sm" onclick="saveBuyer()">
                    <i class="bi bi-check-circle"></i> Save Buyer
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- ✅ Select2 JS for Live Search -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        let itemIndex = 0;
        const subscriptionType = '@ViewBag.SubscriptionType'; // Goods or Services

        // ✅ Initialize buyer dropdown on page load
        $(document).ready(function() {
            $('#buyerSelect').select2({
                theme: 'bootstrap-5',
                placeholder: '-- Type to search buyer --',
                width: '100%'
            });
        });

        function addItem() {
            const tbody = document.getElementById('itemsBody');

            // Clear placeholder row
            if (tbody.children.length === 1 && tbody.children[0].children.length === 1) {
                tbody.innerHTML = '';
            }

            const row = document.createElement('tr');
            const isServices = subscriptionType === 'Services';

            row.innerHTML = `
                <td class="text-center fw-bold">${itemIndex + 1}</td>
                <td>
                    <select name="Items[${itemIndex}].ProductId" class="form-select form-select-sm product-select" required>
                        <option value="">-- Select product --</option>
                        @foreach (var product in ViewBag.Products)
                        {
                                    <text>
                                    <option value="@product.ProductId"
                                            data-hscode="@product.HSCode"
                                            data-rate="@product.Rate"
                                            data-uom="@(product.Unit?.Name ?? "")"
                                            data-taxrate="@product.TaxRate"
                                            data-description="@product.ProductDescription">
                                        @product.ProductDescription
                                    </option>
                                    </text>
                        }
                    </select>
                    <input type="hidden" name="Items[${itemIndex}].ProductDescription" class="item-description" />
                </td>
                <td>
                    <input type="text" name="Items[${itemIndex}].HSCode"
                           class="form-control form-control-sm hs-code bg-light" readonly />
                </td>
                <td>
                    <input type="number" name="Items[${itemIndex}].Rate"
                           class="form-control form-control-sm item-rate bg-light" step="0.01" readonly />
                </td>
                <td>
                    <input type="text" name="Items[${itemIndex}].UOM"
                           class="form-control form-control-sm item-uom bg-light" readonly />
                </td>
                <td>
                    <input type="number" name="Items[${itemIndex}].Quantity"
                           class="form-control form-control-sm item-qty ${isServices ? 'bg-light' : ''}"
                           value="1"
                           ${isServices ? 'readonly' : ''}
                           min="1" step="1" onchange="calculateRow(this)" required />
                </td>
                        <td>
             <input type="number" name="Items[${itemIndex}].TaxRate"
        class="form-control form-control-sm item-taxrate bg-light"
        step="0.01"
        oninput="calculateRow(this)" />

        </td>

                <td>
                    <input type="number" name="Items[${itemIndex}].ValueExclST"
                           class="form-control form-control-sm item-value bg-light" step="0.01" readonly />
                </td>
                <td>
                    <input type="number" name="Items[${itemIndex}].SalesTaxApplicable"
                           class="form-control form-control-sm item-tax bg-light" step="0.01" readonly />
                </td>
                <td>
                    <input type="number" name="Items[${itemIndex}].Discount"
                           class="form-control form-control-sm item-discount" step="0.01" min="0"
                           value="0" onchange="updateSummary()" />
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-danger btn-sm py-1" onclick="removeItem(this)">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            `;

            tbody.appendChild(row);

                $(row).find('.product-select').select2({
            theme: 'bootstrap-5',
            placeholder: '-- Select product --',
            width: '100%'
        }).on('change', function() {
            const selectedOption = $(this).find(':selected');
            const rate = parseFloat(selectedOption.data('rate')) || 0;
            const uom = selectedOption.data('uom') || '';
            const hscode = selectedOption.data('hscode') || '';
            const taxrate = parseFloat(selectedOption.data('taxrate')) || 0; // Tax rate as percentage
            const description = selectedOption.data('description') || '';

            const tr = $(this).closest('tr');

            // Auto-fill fields
            tr.find('.hs-code').val(hscode);
            tr.find('.item-rate').val(rate.toFixed(2));
            tr.find('.item-uom').val(uom);
            tr.find('.item-taxrate').val(taxrate); // Store tax rate (e.g., 18 for 18%)
            tr.find('.item-description').val(description);

            // Calculate row values
            calculateRow(tr.find('.item-qty')[0]);
        });
            itemIndex++;
        }

        function removeItem(btn) {
            btn.closest('tr').remove();
            updateSummary();

            // Renumber rows
            document.querySelectorAll('#itemsBody tr').forEach((row, index) => {
                row.querySelector('td:first-child').textContent = index + 1;
            });
        }

                function calculateRow(input) {
            const row = $(input).closest('tr');
            const rate = parseFloat(row.find('.item-rate').val()) || 0;
            const qty = parseFloat(row.find('.item-qty').val()) || 1;
            const taxRate = parseFloat(row.find('.item-taxrate').val()) || 0; // This is percentage (e.g., 18)

            // Calculate value excluding tax
            const valueExclST = rate * qty;

            // Calculate tax amount: (valueExclST * taxRate / 100)
            const taxAmount = valueExclST * (taxRate / 100);

            // Update fields
            row.find('.item-value').val(valueExclST.toFixed(2));
            row.find('.item-tax').val(taxAmount.toFixed(2)); // This stores the actual tax amount

            updateSummary();
        }

        function updateSummary() {
            let subtotal = 0;
            let totalTax = 0;
            let totalDiscount = 0;

            $('#itemsBody tr').each(function() {
                const value = parseFloat($(this).find('.item-value').val()) || 0;
                const tax = parseFloat($(this).find('.item-tax').val()) || 0;
                const discount = parseFloat($(this).find('.item-discount').val()) || 0;

                subtotal += value;
                totalTax += tax;
                totalDiscount += discount;
            });

            // Grand Total = Subtotal + Tax - Discount
            const grandTotal = subtotal + totalTax - totalDiscount;

            $('#subtotal').text('Rs. ' + subtotal.toLocaleString('en-PK', {minimumFractionDigits: 2, maximumFractionDigits: 2}));
            $('#totalTax').text('Rs. ' + totalTax.toLocaleString('en-PK', {minimumFractionDigits: 2, maximumFractionDigits: 2}));
            $('#totalDiscount').text('- Rs. ' + totalDiscount.toLocaleString('en-PK', {minimumFractionDigits: 2, maximumFractionDigits: 2}));
            $('#grandTotal').text('Rs. ' + grandTotal.toLocaleString('en-PK', {minimumFractionDigits: 2, maximumFractionDigits: 2}));
        }

        function saveBuyer() {
            const name = document.getElementById('newBuyerName').value.trim();
            const ntn = document.getElementById('newBuyerNTN').value.trim();
            const province = document.getElementById('newBuyerProvince').value;
            const address = document.getElementById('newBuyerAddress').value.trim();
            const regType = document.getElementById('newBuyerRegType').value;

            if (!name || !ntn || !province || !address) {
                showBuyerError('Please fill all required fields!');
                return;
            }

            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saving...';
            btn.disabled = true;

            fetch('@Url.Action("Create", "Buyer")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({
                    'BuyerBusinessName': name,
                    'BuyerNTN': ntn,
                    'BuyerProvince': province,
                    'BuyerAddress': address,
                    'BuyerRegistrationType': regType,
                    'SubscriptionId': @ViewBag.SubscriptionId
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showBuyerSuccess('Buyer added successfully!');

                    // ✅ Add to Select2 dropdown
                    var newOption = new Option(`${name} (${ntn}) - ${province}`, data.buyerId, true, true);
                    $(newOption).attr('data-name', name);
                    $(newOption).attr('data-ntn', ntn);
                    $(newOption).attr('data-province', province);

                    $('#buyerSelect').append(newOption).trigger('change');

                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('addBuyerModal')).hide();
                        clearBuyerForm();
                    }, 1000);
                } else {
                    showBuyerError(data.message || 'Error creating buyer!');
                }
            })
            .catch(error => {
                showBuyerError('Network error! Please try again.');
            })
            .finally(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
            });
        }

        function showBuyerError(message) {
            const errorDiv = document.getElementById('buyerModalError');
            const successDiv = document.getElementById('buyerModalSuccess');
            errorDiv.textContent = message;
            errorDiv.classList.remove('d-none');
            successDiv.classList.add('d-none');
        }

        function showBuyerSuccess(message) {
            const errorDiv = document.getElementById('buyerModalError');
            const successDiv = document.getElementById('buyerModalSuccess');
            successDiv.textContent = message;
            successDiv.classList.remove('d-none');
            errorDiv.classList.add('d-none');
        }

        function clearBuyerForm() {
            document.getElementById('addBuyerForm').reset();
            document.getElementById('buyerModalError').classList.add('d-none');
            document.getElementById('buyerModalSuccess').classList.add('d-none');
        }

        // ✅ Add first item on page load
        window.onload = function() {
            addItem();
        };
    </script>
}