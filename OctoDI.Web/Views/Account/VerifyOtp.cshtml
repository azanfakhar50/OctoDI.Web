@model OctoDI.Web.Models.ViewModels.VerifyOtpViewModel

@{
    ViewData["Title"] = "Two-Factor Verification";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-gradient-light">
    <div class="card shadow-lg p-4 p-md-5 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Two-Factor Authentication</h2>
            <p class="text-muted">Enter the OTP sent to your registered email</p>
        </div>

        <!-- Alerts for Success/Error -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="VerifyOtp" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="UserId" />

            <div class="form-floating mb-3">
                <input asp-for="Code" class="form-control form-control-lg" id="otpCode" placeholder="Enter OTP" />
                <label for="otpCode">OTP Code</label>
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg">Verify</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="ResendOtp" class="text-decoration-none">Resend OTP?</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Bootstrap custom validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
